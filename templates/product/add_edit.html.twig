{% extends 'base.html.twig' %}

{% block title %}{{ action }} un produit{% endblock %}

{% block body %}
    <h1 class="text-center my-3">{{ action }} un produit</h1>

    <div class="container">
        {{ form_start(formProduct) }}
            <div class="row my-3">
                <div class="col">
                    {{ form_row(formProduct.name) }}  
                </div>
                <div class="col">
                    {{ form_row(formProduct.category) }} 
                </div> 
            </div>

            <div class="row my-3">
                <div class="col">
                    {{ form_row(formProduct.price) }} 
                </div>
                <div class="col">
                    {{ form_row(formProduct.quantity) }} 
                </div>
                <div class="col">
                    {{ form_row(formProduct.mainPicture) }}
                </div>
            </div>

            <div class="row my-3">
                <div class="col">
                    {{ form_row(formProduct.shortDescription) }}
                </div>
            </div>

            <div class="row my-3">
                <div class="col">
                    {{ form_row(formProduct.longDescription) }}
                </div>
            </div>

            <div class="row my-3">
                <div class="col d-flex justify-content-end">
                    {{ form_row(formProduct.visible) }}
                </div>
            </div>

            <div class="row my-3">
                <div class="col d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">{{ action }} le produit</button>
                </div>
            </div>
        {{ form_end(formProduct) }}  
    </div>
{% endblock %}